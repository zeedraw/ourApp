<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header"></include>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="昵称："/>
            <EditText
                android:id="@+id/name_ed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="10"
                />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                />
        </TableRow>
        <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="性别："
                    android:textSize="@dimen/text_size_large"
                    />
                <RadioGroup
                    android:id="@+id/sex_rg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"/>

                </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="密码："/>
            <EditText
                android:id="@+id/pw_ed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="12"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />
            <TextView
                android:id="@+id/pw_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="确认密码："/>
            <EditText
                android:id="@+id/pwconfirm_ed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="12"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />
            <TextView
                android:id="@+id/pwconfirm_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                />
        </TableRow> <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:text="手机号："/>
        <EditText
            android:id="@+id/phonenum_ed"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:maxLength="11"
            android:digits="0123456789"
            />
        <com.example.administrator.ourapp.TimeButton
            android:id="@+id/sendcode_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </TableRow>

        <TableRow>
        <TextView
            android:id="@+id/phonenum_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证码："
                android:textSize="@dimen/text_size_large"/>
            <EditText
                android:id="@+id/code_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:textSize="@dimen/text_size_medium"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                />
        </TableRow>

    </TableLayout>
    <Button
        android:id="@+id/signup_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="注册"/>

</LinearLayout>