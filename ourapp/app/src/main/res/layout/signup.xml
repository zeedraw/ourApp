<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBJ">
    <include layout="@layout/header"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/colorbj">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_large"
                android:text="昵称："/>
            <EditText
                android:id="@+id/name_ed"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:maxLength="10"
                android:background="@null"
                android:hint="10字符以内"
                />
            <!--<TextView-->
                <!--android:id="@+id/name_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/text_size_small"-->
                <!--/>-->
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/colorbj">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="性别："
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center_vertical"
                    />
                <RadioGroup
                    android:id="@+id/sex_rg"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"/>

                </RadioGroup>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorbj"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_large"
                android:text="密码："
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/pw_ed"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="16"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:text="@null"
                android:hint="16位数字或大小写英文字母"
                android:gravity="center_vertical"
                android:background="@null"
                />
            <!--<TextView-->
                <!--android:id="@+id/pw_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/text_size_small"-->
                <!--/>-->
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_height="43dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorbj">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_vertical"
                android:text="确认密码："/>
            <EditText
                android:id="@+id/pwconfirm_ed"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="16"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="@null"
                />
            <!--<TextView-->
                <!--android:id="@+id/pwconfirm_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/text_size_small"-->
                <!--/>-->
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_height="43dp"
        android:layout_width="match_parent"
        android:background="@color/colorbj"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_large"
            android:text="手机号："
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/phonenum_ed"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medium"
            android:maxLength="11"
            android:digits="0123456789"
            android:background="@null"
            />
        <com.example.administrator.ourapp.TimeButton
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/sendcode_bt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:background="@drawable/mybutton_press2"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_height="43dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorbj">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码："
                android:textSize="@dimen/text_size_large"/>
            <EditText
                android:id="@+id/code_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLength="6"
                android:textSize="@dimen/text_size_medium"
                android:background="@null"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"/>
        <!--<TableRow>-->
            <!--<TextView-->
                <!--android:id="@+id/code_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="@dimen/text_size_small"-->
                <!--/>-->
        <!--</TableRow>-->

    <Button
        android:layout_marginTop="25dp"
        android:id="@+id/signup_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="注册"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/mybutton_press3"
        android:textColor="@color/white"/>

</LinearLayout>