<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">

    <include layout="@layout/header">
        <!-- 左侧按钮为返回， 中间内容为 “实名认证” 右侧按钮为 提交-->
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:divider="@drawable/divider"
                android:showDividers="middle|end|beginning">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_custom"
                    android:layout_marginLeft="@dimen/widget_margin_large"
                    android:layout_marginRight="@dimen/widget_margin_large"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:text="姓名"/>
                    <EditText
                        android:id="@+id/real_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="填写真实姓名"
                        android:textColorHint="@color/province_line_border"
                        android:textColor="#000000"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_custom"
                    android:layout_marginLeft="@dimen/widget_margin_large"
                    android:layout_marginRight="@dimen/widget_margin_large"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:text="身份证号"/>
                    <EditText
                        android:id="@+id/ID_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:hint="填写身份证号"
                        android:textColorHint="@color/province_line_border"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_custom"
                    android:layout_marginLeft="@dimen/widget_margin_large"
                    android:layout_marginRight="@dimen/widget_margin_large"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:text="学校名称"/>
                    <EditText
                        android:id="@+id/school_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:hint="填写学校名称"
                        android:textColorHint="@color/province_line_border"/>
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/widget_margin_medium"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card_front"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/front_id_card"
                    android:layout_marginRight="@dimen/widget_margin_small"/>

                <ImageView
                    android:id="@+id/card_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/back_id_card" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/widget_margin_medium"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/student_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/student_id_card"
                    android:layout_marginRight="@dimen/widget_margin_small"/>

                <ImageView
                    android:id="@+id/half_pic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/half_pic"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_custom"
                android:layout_marginTop="@dimen/widget_margin_large"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:gravity="center">
                <TextView
                    android:id="@+id/submit"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/mybutton_press2"
                    android:text="提交"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>