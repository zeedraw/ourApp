<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header">
        <!-- 左侧按钮为返回， 中间内容为 “实名认证” 右侧按钮为 提交-->
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_custom"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="姓名"/>
        <EditText
            android:id="@+id/real_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_custom"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="身份证号"/>
        <EditText
            android:id="@+id/ID_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_custom"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:text="学校名称"/>
        <EditText
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center_vertical"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/upload_pic"
            android:layout_marginRight="@dimen/widget_margin_small"/>

        <ImageView
            android:id="@+id/card_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/upload_pic" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/student_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/upload_pic"
            android:layout_marginRight="@dimen/widget_margin_small"/>

        <ImageView
            android:id="@+id/half_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/upload_pic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_custom"
        android:layout_marginTop="@dimen/widget_margin_large"
        android:layout_marginLeft="@dimen/widget_margin_large"
        android:layout_marginRight="@dimen/widget_margin_large"
        android:gravity="center">
        <TextView
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/titlebar"
            android:text="提交"/>

    </LinearLayout>
</LinearLayout>