<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header">
        <!--左侧返回 中间好友确认-->
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/widget_margin_large">

        <TextView
            android:id="@+id/confrim_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/widget_margin_large">

        <TextView
            android:id="@+id/refuse_to_add_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/widget_margin_medium"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/text_size_large"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/agree_to_add_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/widget_margin_medium"
            android:text="确认"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/text_size_large"
            android:background="@color/titlebar"/>
    </LinearLayout>

</LinearLayout>