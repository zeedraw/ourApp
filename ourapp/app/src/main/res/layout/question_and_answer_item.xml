<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/widget_margin_medium"
            android:layout_marginRight="@dimen/widget_margin_medium"
            android:layout_marginTop="@dimen/widget_margin_medium"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_marginRight="@dimen/widget_margin_medium"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/widget_margin_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:text="任务持续多长时间"/>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/ic_touch_app_black_24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/widget_margin_medium"
            android:layout_marginRight="@dimen/widget_margin_medium"
            android:layout_marginTop="@dimen/widget_margin_medium"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_marginRight="@dimen/widget_margin_medium"/>

            <TextView
                android:id="@+id/answer"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/widget_margin_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                android:text="暂无回答"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginLeft="@dimen/widget_margin_large"
            android:layout_marginRight="@dimen/widget_margin_large">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/text_size_micro"
                android:text="2016-9-18"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>