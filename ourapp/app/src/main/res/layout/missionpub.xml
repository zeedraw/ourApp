<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBJ">
    <include layout="@layout/header"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/colorbj"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="任务标签"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/mission_pub_tag_tv"
                android:layout_marginLeft="100dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="任务名称"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/mission_pub_name_et"
                android:layout_marginLeft="100dp"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="15"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:hint="填写任务名称"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="任务简介"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/mission_pub_intro_et"
                android:layout_marginLeft="100dp"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="45"
                android:layout_marginTop="12dp"
                android:hint="填写任务简介"
                android:background="@null"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="联系方式"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/contact_number"
                android:layout_marginLeft="100dp"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:maxLength="30"
                android:layout_marginTop="12dp"
                android:hint="填写联系方式"
                android:background="@null"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:onClick="locationClick"
            android:background="@drawable/myitem_press1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所在地"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/location_tv"
                android:layout_marginLeft="100dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:src="@drawable/g17"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="detailLocationClick"
            android:background="@drawable/myitem_press1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="详细地址"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:paddingLeft="15dp"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:src="@drawable/g17"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/detail_location_tv"
                android:layout_marginLeft="100dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_medium"
                android:paddingTop="12dp"
                android:text=""
                android:maxLength="50"

                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            />




    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorbj"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:onClick="startTimeClick"
                android:background="@drawable/myitem_press1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开始时间"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:src="@drawable/g17"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/start_tv"
                    android:layout_marginLeft="24dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:onClick="endTimeClick"
                android:background="@drawable/myitem_press1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="结束时间"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:src="@drawable/g17"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/end_tv"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_medium"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="100dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="detailClick"
                android:background="@drawable/myitem_press1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="任务详情"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:src="@drawable/g17"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_medium"
                    android:paddingTop="12dp"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="100dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd"
                />


        </LinearLayout>
</LinearLayout>
    </ScrollView>


    </LinearLayout>