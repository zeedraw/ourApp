<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mybotton_press">



    <LinearLayout
        android:id="@+id/messagItem"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="8dp">


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            >

            <ImageView
                android:id="@+id/message_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ask"
                android:padding="3dp"
                android:layout_marginTop="5dp"

                />
            <ImageView
                android:id="@+id/be_viewed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/redcircle"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:visibility="invisible"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/message_type"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="30dp"
                    android:text="@string/user_name"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/message_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/message_content"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:lines="1"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginRight="@dimen/widget_margin_medium"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
