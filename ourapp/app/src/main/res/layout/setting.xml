<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <include layout="@layout/header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:divider="@drawable/divider"
        android:showDividers="middle|end|beginning">

        <LinearLayout
            android:id="@+id/modify_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:orientation="horizontal"
            android:background="@drawable/myitem_press">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="修改密码"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="32dp"
            android:divider="@drawable/divider"
            android:showDividers="middle|beginning">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:background="@drawable/myitem_press"
            android:onClick="cacheClick">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="清除缓存"/>
            <TextView
                android:id="@+id/show_cache"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingRight="16dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:orientation="horizontal"

            android:background="@drawable/myitem_press">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="版本更新"/>

        </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="32dp"
            android:divider="@drawable/divider"
            android:showDividers="middle|beginning">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:orientation="horizontal"

            android:background="@drawable/myitem_press"
            android:id="@+id/advice_feedback">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:text="意见反馈"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:orientation="horizontal"

            android:background="@drawable/myitem_press">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/widget_margin_large"
                android:layout_marginRight="@dimen/widget_margin_large"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:text="关于我们"/>

        </LinearLayout>
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="32dp"
        android:divider="@drawable/divider"
        android:showDividers="middle|end|beginning">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_custom"
            android:layout_marginLeft="@dimen/widget_margin_large"
            android:layout_marginRight="@dimen/widget_margin_large"
            android:background="@color/white">

            <TextView
                android:id="@+id/loginout_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/red"
                android:text="退出当前账号"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>