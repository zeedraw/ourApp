<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBJ"
    >
    <ImageView
        android:id="@+id/account_header_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="-52dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/scrollview_header" />

    <include layout="@layout/header"
        android:id="@+id/account_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        ></include>
    <com.example.administrator.ourapp.widget.PullScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerHeight="400dp"
        app:headerVisibleHeight="100dp"
        android:fillViewport="true"
        android:layout_below="@id/account_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/transparent"
            >
            <ImageView
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/defaulticon"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/g34"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:text="志愿者认证:"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/g34"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:text="机构认证:"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorBJ">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/colorbj"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dddddd"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="昵称"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/grey"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp" />
                    <TextView
                        android:layout_marginLeft="100dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_medium"
                        android:paddingTop="12dp"
                        android:text="未知"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                         android:src="@drawable/g17"
                       android:layout_marginRight="10dp"
                        android:padding="10dp"
                        />
                </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="性别"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grey"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp" />
                        <TextView
                            android:layout_marginLeft="100dp"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_medium"
                            android:paddingTop="12dp"
                            android:text="未知"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:src="@drawable/g17"
                            android:layout_marginRight="10dp"
                            android:padding="10dp"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="年龄"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grey"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp" />
                        <TextView
                            android:layout_marginLeft="100dp"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_medium"
                            android:paddingTop="12dp"
                            android:text="未知"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:src="@drawable/g17"
                            android:layout_marginRight="10dp"
                            android:padding="10dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="所在地"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grey"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp" />
                        <TextView
                            android:layout_marginLeft="100dp"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_medium"
                            android:paddingTop="12dp"
                            android:text="未知"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:src="@drawable/g17"
                            android:layout_marginRight="10dp"
                            android:padding="10dp"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorbj"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="星级评价"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grey"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp" />
                        <ImageView
                            android:layout_marginLeft="100dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star05"
                            />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="个人简介"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grey"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp" />
                        <TextView
                            android:singleLine="false"
                            android:layout_marginLeft="100dp"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size_medium"
                            android:paddingTop="12dp"
                            android:text=""/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:src="@drawable/g17"
                            android:layout_marginRight="10dp"
                            android:padding="10dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#dddddd"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </com.example.administrator.ourapp.widget.PullScrollView>


</RelativeLayout>