<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorbj"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/defaulticon"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/g34"
            android:layout_below="@+id/mission_title"
            android:id="@+id/imageView10"
            android:layout_alignLeft="@+id/mission_title"
            android:layout_alignStart="@+id/mission_title"
            android:layout_marginTop="5dp"
/>
        <TextView
            android:id="@+id/organization"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:text="XX机构"
            android:textSize="@dimen/text_size_micro"
            android:textColor="#999999"
            android:layout_below="@+id/mission_title"
            android:layout_toRightOf="@id/imageView10"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/mission_abs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView10"
            android:layout_marginLeft="15dp"
            android:text="活动简介"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#777777"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"/>
        <View
            android:id="@+id/vl1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_below="@+id/mission_abs"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="165dp"
            android:layout_height="15dp"
            android:layout_below="@+id/vl1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/g37"
                android:id="@+id/imageView2" />
            <TextView
                android:id="@+id/mission_time"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="2016-02-11至2016-02-17"
                android:textColor="#999999"
                android:textSize="12.5sp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/vl1"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/rl1"
            android:id="@+id/relativeLayout8">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/g53"
                android:layout_alignParentBottom="true"
                android:id="@+id/imageView3" />
            <TextView
                android:id="@+id/location_abs"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="北京市朝阳区XX"
                android:textColor="#999999"
                android:textSize="12.5sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" />
        </RelativeLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:text="活动名称"
            android:textSize="@dimen/text_size_large"
            android:textColor="#333333"
            android:id="@+id/mission_title"
            android:layout_toRightOf="@id/person_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>