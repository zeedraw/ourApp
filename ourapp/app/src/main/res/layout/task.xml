<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBJ">
    <include layout="@layout/header"
        android:id="@+id/mission_header"></include>
    <TextView
        android:id="@+id/mission_title"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="@dimen/text_size_large"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbj"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/person_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/defaulticon"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" 
                />
            <TextView
                android:id="@+id/publisher_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/person_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""/>
            <ImageView
                android:layout_below="@id/publisher_name"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/g34"
                android:id="@+id/imageView10"
                android:layout_toRightOf="@id/person_image"
                android:layout_marginTop="2dp"
                android:layout_alignLeft="@id/publisher_name"
                />
            <TextView
                android:id="@+id/organization"
                android:layout_width="250dp"
                android:layout_height="15dp"
                android:text=""
                android:textSize="@dimen/text_size_micro"
                android:textColor="#999999"
                android:layout_toRightOf="@id/imageView10"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@id/imageView10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="任务地点："/>
            <TextView
                android:id="@+id/mission_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/info"
                android:text=""
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="任务时间："/>
            <TextView
                android:id="@+id/mission_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/info"
                android:text=""
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="任务状态："/>
            <TextView
                android:id="@+id/mission_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/red"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="详细地址："/>
            <TextView
                android:id="@+id/detail_location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/info"
                android:text=""
                android:gravity="left|center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="任务详情："/>
            <TextView
                android:id="@+id/detail_mission"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/info"
                android:text=""
                android:gravity="left|center_vertical"/>
        </LinearLayout>
        
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/question_and_answer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorbj"
        android:layout_marginTop="40dp">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#dddddd"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="问答"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19.5dp"
            android:gravity="center"
            android:paddingTop="2dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/g35"
            android:layout_alignParentRight="true"
            android:padding="14dp"/>
    </RelativeLayout>
    </LinearLayout>