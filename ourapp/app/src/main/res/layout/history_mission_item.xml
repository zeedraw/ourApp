<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:foreground="?selectableItemBackground">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/materialGrey300"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_space"
        android:paddingRight="@dimen/normal_space"
        android:paddingTop="@dimen/normal_space"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space">
            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/normal_space"
                android:paddingStart="@dimen/small_space"
                android:paddingEnd="@dimen/small_space"
                android:paddingTop="@dimen/tiny_space"
                android:paddingBottom="@dimen/tiny_space"
                android:background="@drawable/edu_tag"
                android:textSize="@dimen/tiny_text_size"
                android:textColor="@color/white"
                android:text="教育"/>

            <TextView
                android:id="@+id/mission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tag"
                android:lineSpacingMultiplier="1.1"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/materialGrey900"
                android:text="找个早上和我一起跑步和口语锻炼的妹子"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:maxLines="1"
            android:textSize="@dimen/tiny_text_size"
            android:textColor="@color/materialGrey500"
            android:text="完成于 10 月 12 日"/>

        <TextView
            android:id="@+id/short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textColor="@color/materialGrey700"
            android:textSize="@dimen/normal_text_size"
            android:text="可建立长期灵肉关系。"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/normal_space"
        android:layout_marginEnd="@dimen/normal_space"
        android:background="@color/materialGrey200"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_space"
        android:paddingRight="@dimen/normal_space"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/materialGrey700"
            android:text="有一头乌黑卷翘的睫毛俏皮地颤动。好评！"/>

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/normal_space"
            android:src="@drawable/defaulticon"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/materialGrey300"/>

</LinearLayout>