<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="custombackground">
        <item name="android:background">#778899</item>
    </style>
    <style name="activitytitle" parent="android:Theme">
        <item name="android:windowTitleSize">32dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/custombackground</item>
        <item name="android:windowBackground">@color/colorwhite</item>
    </style>

    <!-- 自定义标题栏格式 -->
    <style name="titlebar" >
        <item name="android:background">#0792e8</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
