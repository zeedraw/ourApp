<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义主题 -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--选项卡的颜色属性-->
        <item name="textColorTabDefault">@color/tabTextDefault</item>
        <item name="textColorTabSelected">@color/tabTextSelected</item>
    </style>

    <style name="custombackground">
        <item name="android:background">#778899</item>
    </style>
    <style name="activitytitle" parent="android:Theme">
        <item name="android:windowTitleSize">32dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/custombackground</item>
        <item name="android:windowBackground">@color/colorwhite</item>
    </style>

    <!-- 自定义标题栏格式 -->
    <style name="titlebar" >
        <item name="android:background">#0792e8</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <!--下方对话框的动画效果-->
    <style parent="@android:style/Animation" name="AnimBottom">

    <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>

    <item name="android:windowExitAnimation">@anim/push_bottom_out</item>

</style>

    <style parent="android:Animation" name="PopupAnimation">

    <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>

    <item name="android:windowExitAnimation">@anim/push_bottom_out</item>

</style>
        //等待界面的style
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    //星级评分条的style
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

</resources>
